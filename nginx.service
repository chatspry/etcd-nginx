[Unit]
Description=nginx

[Service]
TimeoutStartSec=0
EnvironmentFile=/etc/environment
ExecStartPre=/usr/bin/docker pull chatspry/fleet-nginx
ExecStart=/usr/bin/docker run --rm --name nginx -p 80:80 -p 443:443 -e HOST_IP=${COREOS_PUBLIC_IPV4} NGINX_WORKERS=$(nproc) chatspry/fleet-nginx
ExecStop=/usr/bin/docker kill nginx

[X-Fleet]
X-Conflicts=nginx.service